<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/bottom_nav_graph"
    app:startDestination="@id/home_fragment">

    <fragment
        android:id="@+id/home_fragment"
        android:name="com.ucsdextandroid2.screennavigation.instagram.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_home_fragment_to_singlePostFragment"
            app:destination="@id/singlePostFragment" />
    </fragment>
    <fragment
        android:id="@+id/search_fragment"
        android:name="com.ucsdextandroid2.screennavigation.instagram.SearchFragment"
        android:label="SearchFragment" >
        <action
            android:id="@+id/action_search_fragment_to_singlePostFragment"
            app:destination="@id/singlePostFragment"/>
    </fragment>
    <fragment
        android:id="@+id/favorites_fragment"
        android:name="com.ucsdextandroid2.screennavigation.instagram.NotificationsFragment"
        android:label="FavoritesFragment" >
        <action
            android:id="@+id/action_favorites_fragment_to_singlePostFragment"
            app:destination="@id/singlePostFragment" />
    </fragment>
    <fragment
        android:id="@+id/profile_fragment"
        android:name="com.ucsdextandroid2.screennavigation.instagram.ProfileFragment"
        android:label="ProfileFragment" >
        <action
            android:id="@+id/action_profile_fragment_to_singlePostFragment"
            app:destination="@id/singlePostFragment" />
    </fragment>
    <fragment
        android:id="@+id/singlePostFragment"
        android:name="com.ucsdextandroid2.screennavigation.instagram.SinglePostFragment"
        android:label="SinglePostFragment">

        <argument
            android:name="username"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null"/>

    </fragment>


</navigation>